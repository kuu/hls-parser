{
  "name": "hls-parser",
  "version": "0.8.0",
  "description": "A simple library to read/write HLS playlists",
  "main": "index.js",
  "browser": "dist/hls-parser.min.js",
  "scripts": {
    "lint": "xo",
    "audit": "npm audit --audit-level high",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "build": "rm -fR ./dist; webpack --mode development ; webpack --mode production",
    "test": "npm run lint && npm run build && npm run audit && ava --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuu/hls-parser.git"
  },
  "keywords": [
    "HLS",
    "media",
    "video",
    "audio",
    "streaming"
  ],
  "author": "Kuu Miyazaki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuu/hls-parser/issues"
  },
  "homepage": "https://github.com/kuu/hls-parser#readme",
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "ava": "^3.15.0",
    "babel-loader": "^8.2.2",
    "coveralls": "^3.1.0",
    "nyc": "^15.1.0",
    "rewire": "^5.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "xo": "0.38.2"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "ava/no-ignored-test-files": 0,
      "camelcase": 0,
      "capitalized-comments": 0,
      "dot-notation": 0,
      "import/no-dynamic-require": 0,
      "new-cap": 0,
      "no-cond-assign": 0,
      "no-mixed-operators": 0,
      "no-multi-assign": 0,
      "padding-line-between-statements": 0,
      "quotes": 0,
      "unicorn/catch-error-name": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-lonely-if": 0,
      "unicorn/no-zero-fractions": 0,
      "unicorn/prevent-abbreviations": 0
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "rules": {
          "unicorn/no-array-push-push": 0
        }
      }
    ],
    "settings": {
      "import/resolver": {
        "node": {}
      }
    }
  }
}
